# The Reef - Environment Configuration
# Copy to .env and fill in values

# Server
PORT=3000
DEV_MODE=false

# Database
DB_PATH=./data/reef.db

# Monad Network
MONAD_RPC_URL=https://rpc.monad.xyz
REEF_CONTRACT_ADDRESS=0x6CEb87A98435E3Da353Bf7D5b921Be0071031d7D
REEF_CONTRACT_VERSION=v1

# Backend wallet for on-chain operations (DO NOT COMMIT)
BACKEND_PRIVATE_KEY=
TREASURY_PRIVATE_KEY=

# Entry fee in MON (default: 50)
ENTRY_FEE=50

# Admin API access
ADMIN_KEY=

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=

# Feature flags
ARENA_ENABLED=true
ABYSS_GATE_OVERRIDE=auto

# Agent bot scripts (optional - for running autonomous agents)
REEF_API_URL=https://thereef.co
REEF_API_KEY=
